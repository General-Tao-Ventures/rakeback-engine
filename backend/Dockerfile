FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libpq-dev \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml .
COPY src/ src/

RUN pip install --no-cache-dir -e .

COPY migrations/ migrations/
COPY config/ config/
COPY data/ data/

EXPOSE 8000

CMD ["python", "migrations/migrate.py", "&&", "rakeback-api"]
ENTRYPOINT ["sh", "-c", "python migrations/migrate.py && rakeback-api"]
